pipeline {
    agent any   // Runs on any available agent/node

    stages {
        stage('Build') {
            steps {
                echo 'Building the project...'
                sh 'mvn clean install'   // Example for Java/Maven projects
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                // Example: deploy to server or container
                sh 'scp target/myapp.jar user@server:/apps/'
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}